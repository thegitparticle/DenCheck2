<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.dencheck2.quote.QuoteFragment">

    <data>
        <variable
            name="quoteFragmentModel"
            type="com.example.dencheck2.quote.QuoteFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userDetailsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{quoteFragmentModel.userName}"
            android:textAlignment="center"
            android:layout_marginVertical="30dp"/>

        <TextView
            android:id="@+id/quoteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="there are 2 kinds of people in this world"
            android:textAlignment="center"
            android:layout_marginVertical="30dp"/>

        <Button
            android:id="@+id/quoteNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="30dp"
            android:text="next" />

    </LinearLayout>
</layout>